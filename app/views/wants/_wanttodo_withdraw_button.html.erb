<% if current_user.apply?(job) %>
    <%= form_for(current_user.wants.find_by(job_id: job.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :job_id, job.id %>
      <%= f.submit '応募をキャンセル', class: 'btn btn-warning' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.wants.build) do |f| %>
      <%= hidden_field_tag :job_id, job.id %>
      <%= f.submit 'この仕事に応募する', class: 'btn btn-success' %>
    <% end %>
  <% end %>
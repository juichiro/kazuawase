<h1>無料登録</h1>

<%= form_for(@user) do |f| %>

<%= f.label :name, 'Name' %>
<%= f.text_field :name %>

<%= f.label :email, 'Email' %>
<%= f.email_field :email %>

<%= f.label :password, 'Password' %>
<%= f.password_field :password %>

<%= f.label :password_confirmation, 'Password_confirmation' %>
<%= f.password_field :password_confirmation %>

<%= f.submit 'Sign Up' %>

<% end %>
